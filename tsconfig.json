{
  "compilerOptions": {
    "downlevelIteration": true,
    "target": "ESNext", // Target ES6 or higher
    "module": "ESNext", // Module format
    "declaration": true, // Generates .d.ts files
    "outDir": "./dist", // Output directory
    "strict": true, // Enable all strict type-checking options
    "esModuleInterop": true, // For compatibility with ES6 modules
    "skipLibCheck": true,
    "moduleResolution": "Bundler",
    "rootDir": "./src",
    "sourceMap": true,
    "declarationMap": true
  },
  "include": [
    "src/**/*",
    "../some-three-extensions/src/three.d.ts"
  ],
  "exclude": [
    "node_modules",
    "tests"
  ]
}